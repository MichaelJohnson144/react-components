{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "jest",
      "testing-library__jest-dom",
      "node",
      "react",
      "react-dom"
    ]
  },
  "exclude": [
    "cypress",
    "cypress.config.ts",
    "node_modules",
    "src/__mocks__"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/**/*.ts"
  ]
}
