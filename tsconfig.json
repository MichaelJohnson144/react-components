{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    // "plugins": [
    // {
    //   "name": ""
    //  }
    // ]
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts",
    "src/__mocks__"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/**/*.ts"
  ]
}
